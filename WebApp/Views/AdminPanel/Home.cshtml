@model AdminLoginModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="~/img/main-logo-darktext.png" class="homepage-img"/>
    <h1 class="mb-2">Backend admin panel</h1>

    @if (Model.Message != string.Empty)
    {
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="alert alert-danger" role="alert"><b>@Model.Message</b></div>
        </div>
    </div>
    }

    <div class="row justify-content-center justify-content-between mb-4 mt-4">
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage UserEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="User" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage UserTypeEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="UserType" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage UserAuthEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="UserAuth" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
    </div>
    <div class="row justify-content-center justify-content-between mb-4">
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage AttendanceTypeEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="AttendanceType" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage CourseAttendanceEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="CourseAttendance" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage AttendanceCheckEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="AttendanceCheck" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
    </div>
    <div class="row justify-content-center justify-content-between mb-4">
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage WorkplaceEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="Workplace" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage CourseEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="Course" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage CourseTeacherEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="CourseTeacher" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        <div class="col-md-4">
            <div class="border border-2 rounded-3 p-3">
                <h5>Manage CourseStatusEntities</h5>
                <a class="btn btn-primary mt-4 w-50 h-25" asp-controller="CourseStatus" asp-action="Index"><b>Manage</b></a>
            </div>
        </div>
    </div>
    
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}